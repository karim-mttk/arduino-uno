#include <stdio.h>

int main ()
{
    int counter = 0;
    int max_number =2;
    
    char text[30];
    
    
    printf("Enter text: \n");
    scanf("%s", text);
    
    printf("You have entered text: %s \n", text);
    
    printf("for loop: \n");
    for (int i = 0; text[i] !=0; i++ )
    {
        printf("%c\n", text[i]); /* for integers from the ascii table %d is used
                                    for charaters %c is used */

    }    
    return 0;
    
}
